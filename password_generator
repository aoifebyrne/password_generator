import random
import string

password = "abc"

upper_case = upper_case = input("Would you like upper case letters in your password? Type True or False")

numbers = numbers = pw_length = input("Would you like numbers in your password? Type True or False\n")

pw_length = int(raw_input("How many characters should your password be?"))



symbols ="@!$%^&*(){_+}:?><#"

x=random.randint(0, pw_length)

for i in range(0, x):
        password +=  symbols[random.randint(1, 17)]
print password

letters_needed = pw_length - len(password)

if letters_needed >= 1:
        if upper_case == True:
                x = random.randint(1, letters_needed)
                for i in range(0, x):
                        password += random.choice(string.ascii_letters)     
print password

letters_needed = pw_length - len(password)


if numbers == True:
        x = random.randint(1, letters_needed)
        for i in range(0, x):
                        password += random.choice(string.digits)
                        
print password

letters_needed = pw_length - len(password)


if letters_needed > 0:
        for i in range(0,(letters_needed+1)):
                        password += random.choice(string.ascii_lowercase)
                        
chrlist = list(password)
random.shuffle(chrlist)
print ''.join(chrlist)